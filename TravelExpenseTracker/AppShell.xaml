<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TravelExpenseTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TravelExpenseTracker"
    xmlns:pages="clr-namespace:TravelExpenseTracker.Pages"
    xmlns:viewModels="clr-namespace:TravelExpenseTracker.ViewModels"
    Title="TravelExpenseTracker">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
